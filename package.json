{
  "name": "meteor-schema-index",
  "private": true,
  "scripts": {
    "lint": "eslint ."
  },
  "devDependencies": {
    "@babel/cli": "^7.12.8",
    "@babel/core": "^7.12.9",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-import": "^2.22.1"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "jest": true
    },
    "rules": {
      "arrow-body-style": 0,
      "consistent-return": 0,
      "max-len": 0,
      "no-param-reassign": 0,
      "no-underscore-dangle": 0,
      "no-use-before-define": [
        2,
        "nofunc"
      ],
      "no-unused-expressions": 0,
      "no-console": 0,
      "space-before-function-paren": 0,
      "import/no-extraneous-dependencies": 0,
      "import/no-unresolved": 0,
      "import/extensions": 0
    }
  }
}
